# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Server Configuration
NODE_ENV=development
PORT=3500

# JWT Configuration
JWT_SECRET=your-long-jwt-secret-here-minimum-32-characters-for-security

# MongoDB Configuration
DB_NAME=roman-interview-assistant
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_MAX_POOL_SIZE=10
MONGO_CONNECTION_TIMEOUT=30000
MONGO_SERVER_SELECTION_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=5000

# Winston/Logging Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5
LOG_DIR=logs

# Resume Configuration
RESUME_LIMIT_PER_USER=3
RESUME_CACHE_TTL_HOURS=72

# API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here