{
  "manifest_version": 3,
  "name": "Roman",
  "version": "1.0",
  "description": "Auto-fill interview questions based on your resume and job descriptions using AI",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://my_app_url"
  ],
  "background": {
    "service_worker": "extension/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extension/content.js"],
      "css": ["extension/content.css"]
    }
  ],
  "action": {
    "default_popup": "extension/popup.html",
    "default_title": "Interview Auto-Fill"
  },
  "icons": {
    "16": "extension/icons/icon16.png",
    "48": "extension/icons/icon48.png",
    "128": "extension/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["extension/inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://yourapp.com"
  }
}